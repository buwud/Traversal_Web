@using EntityLayer.Concrete
@model List<Reservation>

<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Reservations</h6>
            <p class="text-sm">Your last 3 active reservations</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="/AdminImages/@item.Destination.ImageS" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">Status: @item.Status</p>
                                <a href="javascript:;">
                                    <h5>
                                        @item.Destination.City
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    Reservation Date: @item.ReservationTime.ToShortDateString()
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <a class="btn btn-outline-primary btn-sm mb-0" href="/Member/Reservation/MyReservations/">View More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                    <div class="card h-100 card-plain border">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <a href="/Member/Reservation/NewReservation/">
                                <i class="fa fa-plus text-secondary mb-3"></i>
                                <h5 class=" text-secondary"> New Reservation </h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>