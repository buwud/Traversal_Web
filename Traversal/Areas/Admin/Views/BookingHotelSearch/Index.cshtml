@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
    double score;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Booking Hotel Reservation</h6>
                    <h7>Searched City: Paris/France</h7>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Hotel Name</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Review Score</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Rate</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @{
                                            counter += 1;
                                        }
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@counter</span>
                                        </td>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.name</h6>
                                                </div>
                                            </div>
                                        </td>
                                        @{
                                            score = double.Parse(item.reviewScore.ToString()) / 10;
                                        }
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@score</span>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.reviewScoreWord</p>
                                        </td>
                                        <td class="text-center"><a href="#" class="badge badge-sm bg-gradient-info align-middle">Details</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>