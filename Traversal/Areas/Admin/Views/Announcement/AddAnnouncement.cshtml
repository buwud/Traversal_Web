@model AnnouncementAddValidatorDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h6>Add Announcement Page</h6>
<form method="post" enctype="multipart/form-data">
    <div>
        @Html.Label("Title")
        <input type="text" pattern="[^\d]*" placeholder="write title" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" style="color:crimson"></span>
    </div>
    <br />
    <div>
        @Html.Label("Content")
        <input type="text" placeholder="write content" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger" style="color:crimson"></span>
    </div>
    <br />
    <div class="text-danger" asp-validation-summary="ModelOnly" style="color:crimson"></div>
    <br />
    <button class="btn btn-primary" style="background-color:crimson">Save</button>
    <br />
</form>
