@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Announcements</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Content</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Delete</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Details</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@counter</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.Title</span>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Content</p>
                                        </td>
                                        
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="badge badge-sm bg-gradient-danger">Delete</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="badge badge-sm bg-gradient-success">Edit</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="#" class="badge badge-sm bg-gradient-dark">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <a href="/Admin/Announcement/AddAnnouncement/" class="badge badge-sm bg-gradient-primary">Add More</a>
            </div>
        </div>
    </div>
</div>

