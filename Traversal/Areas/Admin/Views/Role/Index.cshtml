@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h6>Role List</h6>


    @if (Model.Count > 0)
    {
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Role</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete Role</a></td>
                <td><a href="/Admin/Role/EditRole/@item.Id" class="btn btn-outline-success">Edit Role</a></td>
            </tr>
        }
    </table>
    }
    else
    {
        <div class="alert alert-danger">
            <h7>No Role Found</h7>
        </div>
    }
    <a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary"> Add New Role</a>

    

